<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txtregistration"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:text="@string/registration"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtmobile"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="25dp"
            android:text="Mobile"

            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <TextView
            android:id="@+id/editmobile"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="160dp"
            android:text=""

            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <EditText
            android:id="@+id/editfname"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="115dp"
            android:layout_marginLeft="20dp"
            android:hint="First Name" />
        <EditText
            android:id="@+id/editlname"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="175dp"
            android:layout_marginLeft="20dp"
            android:hint="Last Name" />
        <EditText
            android:id="@+id/editemail"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="235dp"
            android:layout_marginLeft="20dp"
            android:hint="Email Id" />
        <EditText
            android:id="@+id/editgender"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="295dp"
            android:layout_marginLeft="20dp"
            android:hint="Gender" />
        <EditText
            android:id="@+id/editaddress"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="355dp"
            android:layout_marginLeft="20dp"
            android:hint="Address" />
        <EditText
            android:id="@+id/editcity"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="415dp"
            android:layout_marginLeft="20dp"
            android:hint="City" />

        <EditText
            android:id="@+id/editpincode"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="475dp"
            android:hint="Pincode"
            android:maxLength="6" />

        <EditText
            android:id="@+id/editaltmob"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="535dp"
            android:hint="Alternate Mobile"
            android:maxLength="10" />

        <Button
            android:id="@+id/btstep1"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="605dp"
            android:background="@drawable/backgroud_green"
            android:onClick="saveDriverRegistration"
            android:text="@string/STEP_FIRST"
            android:textColor="@color/colorOnPrimaryDemo" />


    </RelativeLayout>


</RelativeLayout>